{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "fsg-api/node_modules",
    "fsg-client/node_modules",
    "fsg-gameserver/node_modules",
    "fsg-websocket/node_modules",
    "fsg-gitworker/node_modules",
    "fsg-shared/node_modules",
    "templates/fivesecondgames/node_modules",
    "templates/tictactoe/node_modules",
    "templates/poptrivia/node_modules",
    "templates/rockpaperscissors/node_modules",
    "*bundle*.js"
  ],
  "include": [
    "fsg-api/**/*",
    "fsg-client/**/*",
    "fsg-gameserver/**/*",
    "fsg-websocket/**/*",
    "fsg-gitworker/**/*",
    "fsg-shared/**/*",
    "fsg-matchmaker/**/*",
    "templates/fivesecondgames/**/*",
    "templates/tictactoe/**/*",
    "templates/poptrivia/**/*",
    "templates/rockpaperscissors/**/*",
  ]
