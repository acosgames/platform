  "bugs": {
    "url": "https://github.com/5SG/platform/issues"
  },
  "homepage": "https://github.com/5SG/platform#readme",
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "axios": "^0.24.0"
  }
}
