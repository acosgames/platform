{
    "apps": [
        {
            "name": "api",
            "cwd": "./api",
            "script": "./index.js",
            "vizion": false,
            "time": true,
            "instances": "1",
            "exec_mode": "cluster",
            "restart_delay": 2000,
            "exp_backoff_restart_delay": 1000,
            "watch": [
                "src/**",
                "index.js",
                "node_modules/shared/**"
            ],
            "node_args": [
                "--inspect=10001"
            ],
            "env": {
                "NODE_ENV": "localhost"
            },
            "env_mobile": {
                "NODE_ENV": "mobile"
            },
            "ignore_watch": [
                "public",
                "sessions",
                "node_modules/shared/node_modules/**",
                "node_modules/shared/model/versions.json"
            ]
        }
    ]
}